#include <iostream>
using namespace std;

int main() {
    int h;
    cout << "Nhap do cao h: ";
    cin >> h;

    for (int i = 1; i <= h; i++) {
        for (int j = 1; j <= i; j++) {
            cout << "*"; // In dấu sao
        }
        cout << endl; // Xuống dòng sau mỗi hàng
    }

    return 0;
}
