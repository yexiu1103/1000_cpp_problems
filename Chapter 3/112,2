#include <iostream>
using namespace std;

int main() {
    int m, n;
    cout << "Nhap kich thuoc hinh chu nhat (m x n): ";
    cin >> m >> n;

    for (int i = 0; i < n; i++) {
        for (int j = 0; j < m; j++) {
            if (i == 0 || i == n - 1 || j == 0 || j == m - 1) {
                cout << "*"; // In dấu sao ở biên
            } else {
                cout << " "; // In khoảng trắng ở giữa
            }
        }
        cout << endl; // Xuống dòng sau mỗi hàng
    }

    return 0;
}
