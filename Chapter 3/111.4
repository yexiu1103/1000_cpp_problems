#include <iostream>
using namespace std;

int main() {
    int h;
    cout << "Nhap do cao h: ";
    cin >> h;

    for (int i = 1; i <= h; i++) {
        for (int j = 1; j <= i; j++) {
            if (j == 1 || j == i || i == h) {
                cout << "*"; // In dấu sao ở biên
            } else {
                cout << " "; // In khoảng trắng ở giữa
            }
        }
        cout << endl; // Xuống dòng sau mỗi hàng
    }

    return 0;
}
