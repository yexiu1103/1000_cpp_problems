#include <iostream>
using namespace std;

int main() {
    int h;
    cout << "Nhap do cao h: ";
    cin >> h;

    for (int i = 1; i <= h; i++) {
        // In khoảng trắng
        for (int j = i; j < h; j++) {
            cout << " ";
        }
        // In dấu sao
        for (int k = 1; k <= (2 * i - 1); k++) {
            cout << "*";
        }
        cout << endl; // Xuống dòng sau mỗi hàng
    }

    return 0;
}
