#include <iostream>
using namespace std;

int main(){
    int n;
    float sum=0;

    do{
        cin >> n;
        if(n<1){
            cout << "Enter again.\n";
        }
    }while (n<1);

    for(int i=1; i<=n; i++){
        sum += static_cast<float> (n)/(n+1);
    }

    cout << sum;

    return 0;
}
