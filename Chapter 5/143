
#include <iostream>
using namespace std;
int main()
{
   int n;
   cin >> n;
   
   int arr[n];
   for(int i=0; i<n; i++){
       cin >> arr[i];
   }
   
   bool soChan = false;
   for(int i=0; i<n; i++){
       if(arr[i]%2==0){
           cout << arr[i];
           soChan=true;
           break;
       }
   }
   if(!soChan){
       cout << "-1";
    }
    
    return 0;
}
